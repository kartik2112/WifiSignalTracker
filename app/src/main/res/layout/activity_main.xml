<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sk.wifisignaltracker.MainActivity">

    <TextView
        android:id="@+id/sSText"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:text="Signal Strength"/>
    <TextView
        android:id="@+id/sigStrength"
        android:layout_below="@id/sSText"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/displayButton"
        android:layout_below="@id/sigStrength"
        android:text="Show recorded values"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/refreshButton"
        android:layout_below="@id/displayButton"
        android:text="Record Values"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
